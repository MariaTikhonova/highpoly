<div class="center jumbotron">
<h1>3d Modeller News Forum Thread</h1>
<p>Create your topics and answer to authors</p>
  <%= link_to "Home", home_path, class: "btn btn-lg btn-primary" %>
</div>

<p id="notice"><%= @branch.title %></p>
 

  <table width="100%" border="0" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th>Topics</th>
      <th>Authors</th>
      <th>Messages</th>
      <th>Last message</th>
      <th>By</th>
      <th>At </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @branch.topics.each do |topic| %>
       <tr>
        <td><%= link_to topic.name, topic_path(topic) %></td>
        <td><%= topic.user.name %></td>
        <td><%= pluralize(topic.messages.count, "messages") %></td>
         <% if topic.messages.count > 0 %>
          <td><%= topic.messages.last.body %></td>
          <td><%= topic.messages.last.author %></td>
          <td><%= topic.messages.last.created_at %></td> 
         <% end %>   
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render partial: 'topics/form' %>

<%= link_to 'Back', branches_path %>


