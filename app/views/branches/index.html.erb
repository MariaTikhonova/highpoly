<div class="center jumbotron">
<h1>3d Modeller News Forum</h1>
<p>Create your topics and answer to authors</p>


  <%= link_to "Home", home_path, class: "btn btn-lg btn-primary" %>
</div>


<p id="notice"><%= notice %></p>


  <table width="100%" border="0" cellspacing="0" cellpadding="0">
  <thead>
  <p>3D Problems</p>
    <tr>
      <th>Thread</th>
      <th>Last topic</th>
      <th>Messages</th>
      <th>Last message</th>
      <th>By</th>
      <th>At </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @branches.each do |branch| %>
       <tr>
        <td><%= link_to branch.name, branch_path(branch) %></td>
        <td><%= branches.topic.last.user.name %></td>
        <td><%= pluralize(topic.messages.count, "messages") %></td>
         <% if topic.messages.count > 0 %>
          <td><%= topic.messages.last.body %></td>
          <td><%= topic.messages.last.author %></td>
          <td><%= topic.messages.last.created_at %></td> 
         <% end %>   
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to image_tag("planets_.jpg", alt: "space works") %>