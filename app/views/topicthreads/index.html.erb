<div class="center jumbotron">
<h1>3d Modeller News Forum</h1>
<p>Create your topics and answer to authors</p>


  <%= link_to "Home", home_path, class: "btn btn-lg btn-primary" %>
</div>


<p id="notice"><%= notice %></p>

 <table width="100%" border="0" cellspacing="0" cellpadding="0">
  <thead style= "background-color: #379392" >
  <p>3D Problems</p>
    <tr>
      <th>Thread</th>
      <th>Last topic</th>
      <th>By</th>
      <th>At</th>
      <th>Messages</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
   <tbody>
    <% @branches.each do |branch| %>
       <tr>
        <td><%= link_to branch.title, branch_path(branch) %></td>
        <td><%= branch.topics.last.name %></td>
        <td><%= branch.topics.last.user.name %></td>
        <td><%= branch.topics.last.created_at %></td>
        <td><%= pluralize(branch.topics.last.messages.count, "messages") %></td>
      </tr>
     <% end %>
  </tbody>
</table>


